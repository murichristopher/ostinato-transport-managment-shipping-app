<%= form_with model: @price, local: true, data: { turbo: false }  do |f| %>
  <div class="row mb-2">
    <%= f.label :cubic_meters_min, class:"col-sm-6 col-form-label"%>
    <div class="col-sm-10">
      <%= f.number_field :cubic_meters_min, step: 0.001, class:"form-control", placeholder:"0.001 m³" %>
    </div>
  </div>
  <div class="row mb-2">
    <%= f.label :cubic_meters_max, class:"col-sm-6 col-form-label"%>
    <div class="col-sm-10">
      <%= f.number_field :cubic_meters_max, step: 0.05, class:"form-control", placeholder:"0.900 m³" %>
    </div>
  </div>
  <div class="row mb-3">
    <%= f.label :weight_min, class:"col-sm-6 col-form-label"%>
    <div class="col-sm-10">
      <%= f.number_field :weight_min, placeholder:"0.1 kg", class:"form-control fs-5", step:0.01 %>
    </div>
  </div>
  <div class="row mb-3">
    <%= f.label :weight_max, class:"col-sm-6 col-form-label"%>
    <div class="col-sm-10">
      <%= f.number_field :weight_max, placeholder:"29.9 kg", class:"form-control fs-5", step:0.01 %>
    </div>
  </div>
  <div class="row mb-3">
    <%= f.label :value_per_km, class:"col-sm-6 col-form-label"%>
    <div class="col-sm-10">
      <%= f.number_field :value_per_km, placeholder:"R$2.95 / km", class:"form-control fs-5", step:0.01 %>
    </div>
  </div>
  <%= f.submit 'Salvar', class:"btn btn-primary fs-5" %>
<% end %>
