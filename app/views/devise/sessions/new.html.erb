<h2><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group mb-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control fs-5" %>
  </div>

  <div class="field form-group mb-2">
    <%= f.label :password, class:"form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control fs-5" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div>
      <%= f.check_box :remember_me, class:"mb-2" %>
      <%= f.label :remember_me, class:"mb-2" %>
    </div>
  <% end %>

  <div class="mb-2">
    <%= f.submit t('.sign_in'), class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
